{
  "name": "@lgamila/extension",
  "displayName": "LGamila Live",
  "version": "1.2.3",
  "description": "This extension shows you a real-time list of all Moroccan Twitch and Kick streamers who are currently live.",
  "author": "Stormix <hello@stormix.dev>",
  "scripts": {
    "dev": "plasmo dev",
    "dev:chrome": "plasmo dev --target=chrome-mv3",
    "dev:firefox": "plasmo dev --target=firefox-mv2",
    "build": "plasmo build",
    "build:chrome": "plasmo build --target=chrome-mv3",
    "build:firefox": "plasmo build --target=firefox-mv2",
    "package": "plasmo package",
    "package:chrome": "plasmo package --target=chrome-mv3",
    "package:firefox": "plasmo package --target=firefox-mv2",
    "build:all": "pnpm build:chrome && pnpm build:firefox",
    "package:all": "pnpm package:chrome && pnpm package:firefox",
    "lint": "npx ultracite lint",
    "format": "npx ultracite format",
    "check-types": "tsc --noEmit --skipLibCheck"
  },
  "dependencies": {
    "@hookform/resolvers": "^4",
    "@lgamila/shared": "workspace:*",
    "@plasmohq/storage": "^1.15.0",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@types/firefox-webext-browser": "^120.0.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "fuse.js": "^7.1.0",
    "lucide-react": "^0.525.0",
    "next-themes": "^0.4.6",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.60.0",
    "react-icons": "^5.5.0",
    "react-query": "^3.39.3",
    "sonner": "^2.0.6",
    "tailwind-merge": "^3.3.1",
    "tslog": "^4.9.3",
    "tw-animate-css": "^1.3.5",
    "use-debounce": "^10.0.5",
    "zod": "3.24.3"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "prettier": "3.2.4",
    "tailwindcss": "^3.4.17",
    "typescript": "5.3.3"
  },
  "manifest": {
    "permissions": [
      "offscreen",
      "notifications"
    ],
    "host_permissions": [
      "https://*/*",
      "<all_urls>"
    ]
  }
}
